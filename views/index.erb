
<html>
<head>
  <h1>CHUCK NORRIS SUDOKU</h1>
  <div id="flash">
    <%= flash[:notice] %>
  </div>
  <title>Sudoku Game</title>   
  <!-- link to the CSS stylesheet -->
  <link href="/stylesheets/application.css" rel="stylesheet" type="text/css">
</head>
<body>
<div id="sudoku">
  <form action="/" method="post">
  <% 3.times do |row| %>
    <div class='row'>
        <!-- we want to create separate div elements for boxes to style them using CSS -->
      <% 3.times do |box| %>
          <div class="box">
         <!-- each box will have nine cells -->
         <% 3.times do |cell_row| %>
              <div class="cell-row">
             <% 3.times do |cell| %>
                  <%= partial :cell, :locals=>{:cell_index => row*27+box*3+cell_row*9+cell} %>
                  <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
        </div>
    <% end %>
    <button>Check solution</button>
  </form>
  <form action="/hard" method="get">
    <button>New Hard Game</button>
  </form>
  <form action="/easy" method="get">
    <button>New Easy Game</button>
  </form>
  </div>
   <h1>CHUCK NORRIS SUDOKU FAQS
